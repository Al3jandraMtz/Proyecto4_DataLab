#TABLA 1 USER NAME
CREATE OR REPLACE TABLE p4-datalab.Data_Set.intermediate_user_name AS
WITH data AS (
  SELECT
    product_id,
    product_name,
    category,
    SPLIT(user_id, ",") AS user_ids,
    SPLIT(user_name, ",") AS user_names
  FROM
    `p4-datalab.Data_Set.cleaned_URL_content_`
)
SELECT
  product_id,
  product_name,
  category,
  user_ids[ORDINAL(pos)] AS user_id,
  user_names[ORDINAL(pos)] AS user_name
FROM
  data,
  UNNEST(GENERATE_ARRAY(1, LEAST(ARRAY_LENGTH(user_ids), ARRAY_LENGTH(user_names)))) AS pos;

  #TABLA 2
CREATE OR REPLACE TABLE p4-datalab.Data_Set.intermediate_review_id AS
WITH data AS (
  SELECT
    product_id,
    product_name,
    category,
    SPLIT(review_id, ",") AS review_ids
  FROM
    `p4-datalab.Data_Set.cleaned_URL_content_`
)
SELECT
  product_id,
  product_name,
  category,
  review_ids[ORDINAL(pos)] AS review_id
FROM
  data,
  UNNEST(GENERATE_ARRAY(1, ARRAY_LENGTH(review_ids))) AS pos;

#tabla 3 
CREATE OR REPLACE TABLE p4-datalab.Data_Set.intermediate_review_title AS
WITH data AS (
  SELECT
    product_id,
    product_name,
    category,
    SPLIT(review_title, ",") AS review_titles
  FROM
    `p4-datalab.Data_Set.cleaned_URL_content_`
)
SELECT
  product_id,
  product_name,
  category,
  review_titles[ORDINAL(pos)] AS review_title
FROM
  data,
  UNNEST(GENERATE_ARRAY(1, ARRAY_LENGTH(review_titles))) AS pos;

#TABLA 4
CREATE OR REPLACE TABLE p4-datalab.Data_Set.intermediate_cleaned_review_content AS
WITH data AS (
  SELECT
    product_id,
    product_name,
    category,
    SPLIT(cleaned_review_content, ".") AS cleaned_review_contents
  FROM
    `p4-datalab.Data_Set.cleaned_URL_content_`
)
SELECT
  product_id,
  product_name,
  category,
  cleaned_review_contents[ORDINAL(pos)] AS cleaned_review_content
FROM
  data,
  UNNEST(GENERATE_ARRAY(1, ARRAY_LENGTH(cleaned_review_contents))) AS pos;

  #TABLA 5
  CREATE OR REPLACE TABLE p4-datalab.Data_Set.intermediate_user_id AS
WITH data AS (
  SELECT
    product_id,
    product_name,
    category,
    SPLIT(user_id, ",") AS user_ids
  FROM
    `p4-datalab.Data_Set.cleaned_URL_content_`
)
SELECT
  product_id,
  product_name,
  category,
  user_ids [ORDINAL(pos)] AS user_id
FROM
  data,
  UNNEST(GENERATE_ARRAY(1, ARRAY_LENGTH(user_ids))) AS pos;

#UNION DE TABLAS

SELECT
  a.product_id,
  a.product_name,
  a.category,
  a.about_product,
  a.discounted_price,
  a.actual_price,
  a.discount_percentage,
  F.user_id,
  b.user_name,
  c.review_id,
  d.review_title,
  e.cleaned_review_content,
  a.rating,
  a.rating_count_clean,
  a.adjusted_rating
FROM
  `p4-datalab.Data_Set.cleaned_URL_content_` a
LEFT JOIN `p4-datalab.Data_Set.intermediate_user_name` b
  ON a.product_id = b.product_id
LEFT JOIN `p4-datalab.Data_Set.intermediate_review_id` c
  ON a.product_id = c.product_id
LEFT JOIN `p4-datalab.Data_Set.intermediate_review_title` d
  ON a.product_id = d.product_id
LEFT JOIN `p4-datalab.Data_Set.intermediate_cleaned_review_content` e
  ON a.product_id = e.product_id
  LEFT JOIN `p4-datalab.Data_Set.intermediate_user_id` F
  ON a.product_id = e.product_id;
